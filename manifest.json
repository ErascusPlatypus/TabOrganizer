{
  "manifest_version": 2,
  "name": "Tab Topic Grouper",
  "version": "1.1",
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "applications": {
    "gecko": {
      "id": "tab-topic-grouper@example.com",
      "strict_min_version": "89.0"
    }
  }
}
